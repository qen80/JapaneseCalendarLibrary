<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- 既定のNuGet.orgソース -->
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- GitHub Packagesソース -->
    <add key="github" value="https://nuget.pkg.github.com/qen80/index.json" protocolVersion="3" />
    
    <!-- ローカルパッケージソース（開発用） -->
    <add key="local" value="./LocalPackages" />
  </packageSources>
  
  <packageSourceCredentials>
    <github>
      <!-- GitHub Personal Access Token（読み取り権限）を設定 -->
      <!-- 実際の使用時は環境変数や安全な方法で設定してください -->
      <add key="Username" value="qen80" />
      <add key="ClearTextPassword" value="[YOUR_PERSONAL_ACCESS_TOKEN]" />
    </github>
  </packageSourceCredentials>
  
  <activePackageSource>
    <!-- すべてのソースを有効にする -->
    <add key="All" value="(Aggregate source)" />
  </activePackageSource>
</configuration>